{
    "properties": {
        "title": "Hierarchical Search Sample"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "toolset",
            "map-init",
            "toolrules",
            "agssearch",
            "console",
            "popups-default",
            "dn_hierarchicalsearch",
            "map-preload-2D",
            "banner"
        ]
    },
    "bundles": {
        "agssearch": {
            "enabled": true,
            "AGSStore": [
                {
                    "id": "flurstuecke_store",
                    "title": "Flurstück suchen",
                    "description": "Beschreibung Flursuche",
                    "idProperty": "OBJECTID",
                    "layerId": "flurstuecke",
                    "useIn": [
                        "selection"
                    ],
                    "filterOptions": {
                        "suggestContains": true
                    },
                    "fetchIdProperty": true
                }
            ]
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://www.conterra.de"
            }
        },
        "resultcenter": {
            "FeatureMapVisualizer": {
                "useDataViewPaging": true
            },
            "ActionController": {
                "zoomToFeatures": true,
                "zoomToSelected": false,
                "centerSelected": true,
                "zoomAfterDeletion": false,
                "zoomToClicked": false,
                "centerClicked": false
            },
            "TriggerShowResultCenterCommand": {
                "showToolOnData": true,
                "autoOpen": false,
                "hideToolOnEmpty": true,
                "autoClose": true
            },
            "DataView": {
                "DGRID": {
                    "checkboxSelection": true,
                    "columns": [
                        {
                            "matches": {
                                "name": {
                                    "$exists": true
                                }
                            },
                            "width": 150
                        }
                    ]
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "hierarchicalSearchWidget",
                                "sublayout": [
                                    "desktop",
                                    "tablet_landscape",
                                    "tablet_portrait"
                                ],
                                "window": {
                                    "marginBox": {
                                        "w": 400,
                                        "h": 140,
                                        "t": 115,
                                        "l": 20
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets",
                        "title": "Strassen",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "flurstuecke",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/Berlin_Flurst%C3%BCcke/FeatureServer/0",
                            "outFields": [
                                "*"
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": [],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "hierarchicalSearchToggleTool"
                ]
            }
        },
        "popups": {
            "Config": {
                "dockingDisabled": true
            }
        },
        "dn_hierarchicalsearch": {
            "HierarchicalSearchModel": {
                "storeId": "flurstuecke_store",
                "fields": [
                    {
                        "name": "gemarkung_",
                        "label": "Gemarkung"
                    },
                    {
                        "name": "flur_numme",
                        "label": "Flur"
                    },
                    {
                        "name": "flurstue_1",
                        "label": "Flurstück"
                    }
                ],
                "resultHandling": [
                    "zoomToResult",
                    "openPopup",
                    "sendResultToResultCenter"
                ]
            }
        }
    }
}
