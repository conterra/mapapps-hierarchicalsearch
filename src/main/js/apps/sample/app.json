{
    "properties": {
        "title": "Hierarchical Search Sample"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-autumn",
            "toolset",
            "map-init",
            "toolrules",
            "agssearch",
            "console",
            "popups-default",
            "map-preload-2D",
            "banner",
            "notifier",
            "result-ui",
            "dn_hierarchicalsearch"
        ]
    },
    "bundles": {
        "dn_hierarchicalsearch": {
            "HierarchicalSearchToggleTools": [
                {
                    "id": "flurstueckssuche",
                    "title": "Flurstücke suchen",
                    "tooltip": "Flurstücke suchen",
                    "button":"icon-select-mouse",
                    "rules": {
                        "roles": [
                            "maAdmin",
                            "maEditor"
                        ],
                        "ruleSuccessProperty": "enabled"
                    },
                    "storeId": "flurstuecke_store",
                    "fields": [
                        {
                            "name": "NAMGMK",
                            "label": "Gemarkung"
                        },
                        {
                            "name": "FLN",
                            "label": "Flur"
                        },
                        {
                            "name": "ZAE",
                            "label": "Flurstück"
                        }
                    ],
                    "mapActions": [
                        "highlight",
                        "zoomto"
                    ],
                    "mapActionsConfig": {
                        "zoomto-scale": 5000
                    }
                },
                {
                    "id": "adresssuche",
                    "title": "Adressen suchen",
                    "tooltip": "Adressen suchen",
                    "button":"icon-web-map-search",
                    "storeId": "add_hamburg",
                    "fields": [
                        {
                            "name": "portsname",
                            "label": "Stadt"
                        },
                        {
                            "name": "strname",
                            "label": "Straße"
                        },
                        {
                            "name": "hausnr",
                            "label": "Hausnummer"
                        },
                        {
                            "name": "zusatz",
                            "label": "Zusatz"
                        }
                    ],
                    "mapActions": [
                        "highlight",
                        "zoomto"
                    ],
                    "mapActionsConfig": {
                        "zoomto-scale": 5000
                    }
                }
            ]
        },
        "agssearch": {
            "AGSStore": [
                {
                    "id": "flurstuecke_store",
                    "title": "Flurstück suchen",
                    "description": "Beschreibung Flursuche",
                    "idProperty": "OBJECTID",
                    "layerId": "flurst_berlin",
                    "useIn": [
                        "selection"
                    ],
                    "filterOptions": {
                        "suggestContains": true
                    },
                    "fetchIdProperty": true
                },
                {
                    "id": "add_hamburg",
                    "title": "Addresse suchen",
                    "description": "Beschreibung Addresssuche",
                    "layerId": "add_hamburg",
                    "useIn": [
                        "selection"
                    ],
                    "filterOptions": {
                        "suggestContains": true
                    },
                    "fetchIdProperty": true
                }
                
            ]
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://www.conterra.de"
            }
        },
        "resultcenter": {
            "FeatureMapVisualizer": {
                "useDataViewPaging": true
            },
            "ActionController": {
                "zoomToFeatures": true,
                "zoomToSelected": false,
                "centerSelected": true,
                "zoomAfterDeletion": false,
                "zoomToClicked": false,
                "centerClicked": false
            },
            "TriggerShowResultCenterCommand": {
                "showToolOnData": true,
                "autoOpen": false,
                "hideToolOnEmpty": true,
                "autoClose": true
            },
            "DataView": {
                "DGRID": {
                    "checkboxSelection": true,
                    "columns": [
                        {
                            "matches": {
                                "name": {
                                    "$exists": true
                                }
                            },
                            "width": 150
                        }
                    ]
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "hierarchicalSearchWidget",
                                "sublayout": [
                                    "desktop",
                                    "tablet_landscape",
                                    "tablet_portrait"
                                ],
                                "window": {
                                    "marginBox": {
                                        "w": 400,
                                        "h": 140,
                                        "t": 115,
                                        "l": 20
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets-vector",
                        "title": "Strassen",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "flurst_berlin",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/Flurst_Berlin/FeatureServer/0",
                            "outFields": [
                                "*"
                            ]
                        },
                        {
                            "id": "add_hamburg",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/Adressen_Hamburg/FeatureServer/0",
                            "outFields": [
                                "*"
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": [
                            "flurstueckssuche",
                            "adresssuche"
                        ],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "hierarchicalSearchToggleTool"
                ]
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "popups": {
            "Config": {
                "dockingDisabled": true
            }
        }
    }
}
