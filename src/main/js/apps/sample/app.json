{
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system@^4.3.0",
            "splashscreen@^4.3.0",
            "templatelayout@^4.3.0",
            "template-seasons@^4.3.0",
            "theme-everlasting@^4.3.0",
            "toolset@^4.3.0",
            "map-init@^4.3.0",
            "toolrules",
            "agssearch",
            "console",
            "popups-default",
            "dn_hierarchicalsearch"
        ]
    },
    "properties": {
        "title": "Hierarchical Search Sample"
    },
    "bundles": {
        "dn_hierarchicalsearch": {
            "HierarchicalSearchVueWidgetFactory": {
                "fields": [
                    {
                        "name": "gemarkung_",
                        "label": "Gemarkung"
                    },
                    {
                        "name": "flur_numme",
                        "label": "Flur"
                    },
                    {
                        "name": "flurstue_1",
                        "label": "Flurst√ºck"
                    }
                ]
            },
            "HierarchicalSearchController": {
                "storeId": "flurstuecke_store",
                "resultHandling":[
                    "zoomToResult",
                    "openPopup"
                ]
            }
        },
        "agssearch": {
            "AGSStore": [
                {
                    "id": "flurstuecke_store",
                    "title": "Flurst\u00FCck suchen",
                    "description": "Beschreibung Flursuche",
                    "idProperty": "OBJECTID",
                    "layerId": "flurstuecke",
                    "useIn": [
                        "selection"
                    ],
                    "filterOptions": {
                        "suggestContains": true
                    },
                    "fetchIdProperty": true
                }
            ],
            "enabled": true
        },
        "resultcenter": {
            "ActionController": {
                "zoomToFeatures": true,
                "zoomToSelected": false,
                "centerSelected": true,
                "zoomAfterDeletion": false,
                "zoomToClicked": false,
                "centerClicked": false
            },
            "FeatureMapVisualizer": {
                "useDataViewPaging": true
            },
            "DataView": {
                "DGRID": {
                    "checkboxSelection": true,
                    "columns": [
                        {
                            "matches": {
                                "name": {
                                    "$exists": true
                                }
                            },
                            "width": 150
                        }
                    ]
                }
            },
            "TriggerShowResultCenterCommand": {
                "showToolOnData": true,
                "autoOpen": false,
                "hideToolOnEmpty": true,
                "autoClose": true
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets",
                        "title": "Strassen",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "flurstuecke",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/Berlin_Flurst%C3%BCcke/FeatureServer/0",
                            "outFields": [
                                "*"
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "hierarchicalSearchWidget",
                                "sublayout": [
                                    "desktop",
                                    "tablet_landscape",
                                    "tablet_portrait"
                                ],
                                "window": {
                                    "marginBox": {
                                        "w": 400,
                                        "h": 140,
                                        "t": 115,
                                        "l": 20
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": [
                            "*"
                        ],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "hierarchicalSearchToggleTool"
                ]
            }
        },
        "popups": {
            "Config": {
                "dockingDisabled": true
            }
        }
    }
}
