{
    "name": "dn_hierarchicalsearch",
    "version": "3.0.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "main": "",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-hierarchical-search",
    "dependencies": {
        "apprt-vue": "^4.2.2",
        "apprt-binding": "^4.2.2",
        "apprt-vuetify": "^4.2.2",
        "agssearch": "^4.2.2",
        "map-actions": "^4.2.2",
        "result-api":"^4.15.0"
    },
    "layout-widgets": [
        {
            "widgetRole": "hierarchicalSearchWidget",
            "sublayout": [
                "desktop"
            ],
            "window": {
                "autofocus": false,
                "closable": true,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 450,
                    "h": 170
                },
                "minSize": {
                    "w": 450,
                    "h": 170
                }
            }
        },
        {
            "widgetRole": "hierarchicalSearchWidget",
            "sublayout": [
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "autofocus": false,
                "closable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": 450,
                    "h": 170
                }
            }
        },
        {
            "widgetRole": "hierarchicalSearchWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "autofocus": false,
                "minimizeOnClose": true,
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "50%",
                    "t": 0
                },
                "windowClass": "mobileWindow"
            }
        }
    ],
    "components": [
        {
            "name": "HierarchicalSearchModel",
            "provides": [
                "dn_hierarchicalsearch.HierarchicalSearchModel"
            ]
        },
        {
            "name": "HierarchicalSearchTools",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "componentFactory": true,
            "properties": {
                "id": "hierarchicalSearchTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "toolRole": "toolset",
                "iconClass": "${tool.button}",
                "togglable": false,
                "clickHandler": "showHierarchicalSearchTool",
                "storeId": "",
                "fields": [],
                "mapActions": [
                    "highlight",
                    "zoomto"
                ],
                "mapActionsConfig": {
                    "zoomto-scale": 5000
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_hierarchicalsearch.HierarchicalSearchController"
                }
            ]
        },
        {
            "name": "HierarchicalSearchController",
            "propertiesConstructor": true,
            "provides": [
                "dn_hierarchicalsearch.HierarchicalSearchController"
            ],
            "properties": {},
            "references": [
                {
                    "name": "_hierarchicalSearchModel",
                    "providing": "dn_hierarchicalsearch.HierarchicalSearchModel"
                },
                {
                    "name": "_logService",
                    "providing": "ct.framework.api.LogService"
                },
                {
                    "name": "_actionService",
                    "providing": "map-actions.ActionService"
                },
                { 
                    "name": "_resultViewerService", 
                    "providing": "result-api.ResultViewerService", 
                    "cardinality": "0..1" 
                }
            
            ]
        },
        {
            "name": "SendResultToResultUIAction",
            "impl": "./actions/SendResultToResultUIAction",
            "provides": [
                "map-actions.Action"
            ],
            "references": [
                {
                    "name": "resultViewerService",
                    "providing": "result-api.ResultViewerService",
                    "cardinality": "0..1"
                },
                {
                    "name": "logService",
                    "providing": "ct.framework.api.LogService"
                }
            ]
        },
        {
            "name": "SendResultToResultCenterAction",
            "impl": "./actions/SendResultToResultCenterAction",
            "provides": [
                "map-actions.Action"
            ],
            "references": [
                {
                    "name": "dataModel",
                    "providing": "resultcenter.DataModel",
                    "cardinality": "0..1"
                },
                {
                    "name": "logService",
                    "providing": "ct.framework.api.LogService"
                }
            ]
        }
    ]
}
